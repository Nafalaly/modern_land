<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!--  form-->
  <record id="gereja_view_form" model="ir.ui.view">
    <field name="name">Gereja Form</field>
    <field name="model">gereja</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="approve_gereja" class="oe_highlight" groups="custom_addons.group_app_approve" attrs="{'invisible':[('state', '=', 'approved')]}" string="Approve" type="object"/>
          <button name="redraft_gereja" class="oe_highlight" groups="custom_addons.group_app_approve" attrs="{'invisible':[('state', '=', 'draft')]}" string="Re-draft" type="object"/>
          <button name="action_cancel" class="oe_highlight" groups="custom_addons.group_app_approve" type="object" string="Cancel" attrs="{'invisible': [('state', 'not in', ['draft'])]}" data-hotkey="z"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <field name="image_1920" widget="image" class="oe_avatar"/>
          <div class="oe_title">
              <label for="name"/>
              <h1>
                  <field name="name" default_focus="1"/>
              </h1>
              <label for="sequence"/>
              <field name="sequence" attrs="{'invisible':[('sequence', '=', False)]}"/>
          </div>
          <group>
                <group string="Informasi Gereja">
                  <field name="gembala_id" options="{'no_create': True, 'no_create_edit':True}"/>
                  <field name="parent_id" domain="[('id', '!=', id)]" options="{'no_create': True, 'no_create_edit':True}"/>
                  <field name="phone" string="Nomor Telpon Sekertariat"/>
                </group>
                <group string="Alamat" name="address">
                    <field name="country_enforce_cities" invisible="1" required="1"/>
                    <field name="street" string="jalan" required="1"/>
                    <field name="city" string="Kota" attrs="{'invisible':[('country_enforce_cities','=',True)]}" required="1"/>
                    <field name="city_id" string="Kota" attrs="{'invisible':[('country_enforce_cities','=',False)]}" required="1"/>
                    <field name="state_id" string="Provinsi" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}" required="1"/>
                    <field name="zip" string="Kode pos" required="1"/>
                    <field name="country_id" string="Negara" required="1"/>
                </group>
          </group>
            <notebook>
              <page string="Jadwal Ibadah" name="operational_schedule">
                  <field name="operational_schedule_line">
                      <tree editable="bottom" class="operational_schedule_table">
                          <field name="church_activity_type_id"/>
                          <field name="start_time" widget="timepicker"/>
                      </tree>
                  </field>
              </page>
            </notebook>
        </sheet>
        <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
        </div>
      </form>
    </field>
  </record>

  <!--  tree-->
  <record id="gereja_view_tree" model="ir.ui.view">
    <field name="name">Gereja List</field>
    <field name="model">gereja</field>
    <field name="arch" type="xml">
      <tree delete="1">
        <field name="sequence"/>
        <field name="name"/>
        <field name="gembala_id"/>
        <field name="parent_id"/>
        <field name="phone" string="Nomor Telpon"/>
        <field name="full_address"/>
        <field name="state"/>
        <field name="active" readonly="1" widget="boolean_toggle"/>
      </tree>
    </field>
  </record>

  <!--  search-->
  <record id="gereja_view_search" model="ir.ui.view">
    <field name="name">Gereja Search</field>
    <field name="model">gereja</field>
    <field name="arch" type="xml">
      <search>
        <field name="sequence"/>
        <field name="name"/>
        <field name="gembala_id"/>
        <field name="full_address"/>
      </search>
    </field>
  </record>
</odoo>