<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!--  form-->
  <record id="church_activity_type_view_form" model="ir.ui.view">
    <field name="name">church.activity.type.form</field>
    <field name="model">church.activity.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
              <label for="name"/>
              <h1>
                  <field name="name" default_focus="1"/>
              </h1>
              <label for="report_name"/>
              <field name="report_name"/>
          </div>
        </sheet>
      </form>
    </field>
  </record>

  <!--  tree-->
  <record id="church_activity_type_view_tree" model="ir.ui.view">
    <field name="name">church.activity.type.list</field>
    <field name="model">church.activity.type</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="report_name"/>
      </tree>
    </field>
  </record>

  <!--  search-->
  <record id="church_activity_type_view_search" model="ir.ui.view">
    <field name="name">church.activity.type.search</field>
    <field name="model">church.activity.type</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="report_name"/>
      </search>
    </field>
  </record>
</odoo>